doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/base2.css')
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(type='text/javascript', src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src="/javascripts/myscript.js",type='text/javascript')
    
    block headContent
   
  
  body.bg-light(onload="checkajax()")
    
    nav.navbar.navbar-expand-lg.navbar-light.fixed-top(style='background-color:#213042;;')
      div.container-fluid
        .navbar-header
         
          a.navbar-brand(href="/",style="color: #fff;") Machine Registration
        


       
        ul(class="navbar-nav mr-auto mt-2 mt-lg-0")
          
      
          li(class="nav-item")
            a(class="nav-link" href="/users/profile",style="color: #fff;") 
              i.fa.fa-user-o.fa-4xs &nbsp; User Profile
          
        ul(class='nav navbar-nav navbar-right')
          
          a(class='btn btn-primary', value="Logout",href='/users/logout') Logout
    
     
     

    div.container.my-5
      div.sidenav
        
        
        a(href="/") 
          i.fa.fa-home.fa-4xs &nbsp;  Home  
         
        a(href="/machine") 
          i.fa.fa-cog.fa-4xs  &nbsp;  Machine
           
        

      div(class='main',id="main")  
        .sample.ml-4.mt-0(style=' height: 32px;width: 80%;z-index:-1;')
          if result
            if type
              div(class="alert alert-success alert-dismissable fade show" role="alert",id='msgdiv')=result
                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                  span(aria-hidden="true") &times;
            else
              div(class="alert alert-danger alert-dismissable fade show" role="alert",id='msgdiv2')=result
                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                  span(aria-hidden="true") &times;
        

        block content

    