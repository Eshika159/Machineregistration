extends layout

block headContent
  
  link(rel="stylesheet", href="/stylesheets/index.css")
  link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
block content
  
  
  
     
  .col.main.pt-5.mt-8.mx-2.my-8
    
    .row.mb-3
     

    .row.mb-3
      .col-xl-3.col-sm-6.py-2
        .card.bg-success.text-white.h-100
          .card-body.bg-success
            .rotate
              i.fa.fa-bar-chart.fa-2x
            h7.text-uppercase Total Machines
            
            h1.display-4 #{total}
      .col-xl-3.col-sm-6.py-2
        .card.text-white.bg-danger.h-100
          .card-body.bg-danger
            .rotate
              i.fa.fa-check-circle.fa-2x
            h7.text-uppercase Running Machines
            h1.display-4 #{running}
      .col-xl-3.col-sm-6.py-2
        .card.text-white.bg-info.h-100
          .card-body.bg-info
            .rotate
              i.fa.fa-pause-circle.fa-2x
            h7.text-uppercase Paused Machines
            h1.display-4 #{paused}
      .col-xl-3.col-sm-6.py-2
        .card.text-white.bg-warning.h-100
          .card-body
            .rotate
              i.fa.fa-stop-circle.fa-2x
            h7.text-uppercase Stopped Machines
            h1.display-4 #{stop}
          
    
  
    
